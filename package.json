{
  "name": "nodemailer-mock-transport",
  "version": "1.0.0",
  "description": "mock-mailer for putting tests around services that use node-mailer",
  "main": "index.js",
  "scripts": {
    "test": "mocha --check-leaks --ui exports --require blanket -R mocoverage"
  },
  "config": {
    "blanket": {
      "pattern": "index.js",
      "data-cover-never": [
        "node_modules",
        "test"
      ],
      "output-reporter": "spec"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/bcoe/nodemailer-mock-transport"
  },
  "keywords": [
    "nodemailer",
    "test",
    "mock"
  ],
  "author": "Ben Coe <ben@npmjs.com>",
  "license": "ISC",
  "devDependencies": {
    "blanket": "^1.1.6",
    "chai": "^2.0.0",
    "mocha": "^2.1.0",
    "mocoverage": "^1.0.0",
    "nodemailer": "^1.3.0"
  }
}
